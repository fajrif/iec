<%- text_color, btn_color = get_iec_element_colors(bg_color) -%>

<%- text_width = snippet.css_title unless snippet.css_title.blank? -%>

<%- desc_width = 'w-70 sm-w-100' -%>
<%- desc_width = snippet.css_desc unless snippet.css_desc.blank? -%>

<div class="container-xl">
	<div class="row <%= "text_color" %>">
		<% if snippet.orientation == "center" %>
			<div class="col-12 wow animate__fadeIn">
				<h3 class="font-weight-320 text-uppercase margin-50px-bottom sm-margin-15px-bottom <%= text_width %>"><%= snippet.title %></h3>
			</div>
			<div class="col-12 wow animate__fadeIn">
				<div class="row">
					<div class="col-12 col-md-4 offset-md-3">
						<div class="margin-30px-bottom sm-margin-15px-bottom">
							<%= raw snippet.short_description %>
						</div>
					</div>
					<div class="col-12 col-md-5">
						<div class="margin-30px-bottom sm-margin-15px-bottom">
							<%= raw snippet.description %>
						</div>
					</div>
				</div>
			</div>
		<% else %>
			<div class="col-12 wow animate__fadeIn">
				<h3 class="font-weight-320 text-uppercase w-90"><%= snippet.title %></h3>
				<div class="<%= desc_width %> margin-30px-bottom sm-margin-15px-bottom">
					<%= raw snippet.short_description %>
				</div>
			</div>
		<% end %>
	</div>
</div>
