<%- text_desc_width = "w-25 lg-w-30 md-w-50 sm-w-100" -%>
<%- text_desc_width = "w-45 lg-w-45 md-w-50 sm-w-100" if !banner.description.blank? && banner.description.length >= 130 -%>

<!-- start page single banner -->
<% if banner.is_video? %>
<section id="<%= banner.section_id %>" class="p-0 single-banner parallax">
<% else %>
<section id="<%= banner.section_id %>" class="p-0 single-banner parallax" data-parallax-background-ratio="0.5" style="background-image:url('<%= cdn_image_url(banner.image) if banner.image.attached? %>');">
<% end %>
	<div class="full-screen <%= @banner_text_color %> md-landscape-h-580px">
		<% if @banner_text_color == 'text-white-2' && !banner.is_video? %>
		<div class="opacity-extra-medium bg-black"></div>
		<% end %>
		<div class="container-xl position-relative h-100">
			<div class="row h-100">
				<div class="col-12 d-flex margin-150px-top justify-content-between flex-column">
					<div>
						<h1 class="font-weight-320 text-uppercase margin-35px-bottom sm-margin-15px-bottom w-100"><%= raw banner.title %></h1>
					</div>
					<div class="d-flex justify-content-between align-items-end align-items-md-start">
						<span class="font-weight-320 alt-font margin-five-bottom text-uppercase iec-text-rotate w-200px text-end text-md-start">iec</span>
						<div class="margin-five-bottom sm-margin-ten-bottom last-paragraph-no-margin sm-fs-16 <%= text_desc_width %>">
							<div><%= raw banner.description %></div>
							<% banner.link_buttons.each do |link_button| %>
								<%= render_link_text_url(link_button, "btn btn-medium #{@banner_btn_color} btn-rounded margin-20px-top") %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%- if banner.is_video? -%>
		<video class="htms-video" poster="<%= cdn_image_url(banner.image) if banner.image.attached? %>" autoplay loop muted playsinline>
			<source type="<%= banner.video.content_type %>" src="<%= cdn_image_url(banner.video) %>">
		</video>
		<%- end -%>
	</div>
</section>
<!-- end page single banner -->
