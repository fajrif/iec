<div class="row align-items-center">
	<div class="col-md-12 text-center sm-margin-30px-bottom">
		<%- if snippet.image.attached? -%>
		<a class="lightbox-group-gallery-item" title="<%= snippet.title %>" href="<%= get_locale_image_url(snippet) %>">
			<%= image_tag(get_locale_image_url(snippet), alt: snippet.title, class: "w-100") %>
		</a>
		<%- end -%>
	</div>
</div>
