<div class="container-fluid no-padding-lr">
	<div class="scroll-box">
		<div class="marquee scroll-text text-medium-green">
			<%= snippet.title %>
		</div>
	</div>
</div>

<%= content_for :tail do %>
	<%= javascript_include_tag "jquery.marquee.min.js" %>
	<script>
		jQuery(document).ready(function($){
			$('.marquee').marquee({
				speed: 150,
				gap: 50,
				delayBeforeStart: 0,
				direction: 'left',
				duplicated: true,
				pauseOnHover: true
			});
		});
	</script>
<% end %>
