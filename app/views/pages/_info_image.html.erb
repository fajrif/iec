<%- bg_color ||= '' -%>
<%- text_color, btn_color = get_iec_element_colors(bg_color) -%>

<%- if snippet.has_offset? -%>
	<%- col1 = 'col-md-5 offset-md-1' -%>
	<%- text_align = 'text-start' -%>
<%- else -%>
	<%- col1 = 'col-md-6' -%>
	<%- text_align = 'text-center' -%>
<%- end -%>

<%- unless snippet.title_rotate? -%>
	<%- align_items = 'align-items-center' -%>
<%- else -%>
	<%- text_width = snippet.title.length >= 25 ? 'w-300px' : '' -%>
<%- end -%>

<%- header_tag = "h3" -%>
<%- header_tag = snippet.title_tag unless snippet.title_tag.blank? -%>

<div class="container-xl">
	<div class="row <%= "#{align_items} #{text_color}" %>">
		<% if snippet.orientation == "right" %>
			<% if snippet.title_rotate? %>
				<div class="col-md-1 d-md-flex">
					<div class="text-rotate">
						<h3 class="font-weight-320 text-uppercase text-flip <%= text_width %>"><%= snippet.title %></h3>
					</div>
				</div>
				<div class="col-md-5 wow animate__fadeIn" data-wow-delay="0.2s">
					<%= render "info_image_desc", snippet: snippet, btn_color: btn_color %>
				</div>
			<% else %>
				<div class="<%= col1 %> order-2 order-md-1 wow animate__fadeInLeft" data-wow-delay="0.2s">
					<%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-320 text-uppercase w-90") %>
					<%= render "info_image_desc", snippet: snippet, btn_color: btn_color %>
				</div>
			<% end %>
			<div class="col-md-6 order-1 order-md-2 sm-margin-30px-bottom text-center wow animate__fadeInRight" data-wow-delay="0.4s">
				<% if snippet.image.attached? %>
					<%= image_tag(cdn_image_url(snippet.image), class: "border-radius-8") %>
				<% end %>
			</div>
		<% else %>
			<% if snippet.title_rotate? %>
				<div class="col-md-1 d-md-flex">
					<div class="text-rotate">
						<h3 class="font-weight-320 text-uppercase text-flip <%= text_width %>"><%= snippet.title %></h3>
					</div>
				</div>
				<div class="col-md-5 d-flex justify-content-center align-items-center sm-margin-30px-bottom text-center wow animate__fadeIn" data-wow-delay="0.2s">
					<% if snippet.image.attached? %>
						<%= image_tag(cdn_image_url(snippet.image), class: "border-radius-8") %>
					<% end %>
				</div>
				<div class="col-md-6 d-flex justify-content-center align-items-center padding-five-lr wow animate__fadeInRight" data-wow-delay="0.4s">
					<%= render "info_image_desc", snippet: snippet, btn_color: btn_color %>
				</div>
			<% else %>
				<div class="<%= "#{col1} #{text_align}" %> d-flex justify-content-center align-items-center sm-margin-30px-bottom wow animate__fadeInLeft" data-wow-delay="0.2s">
					<% if snippet.image.attached? %>
						<%= image_tag(cdn_image_url(snippet.image), class: "border-radius-8") %>
					<% end %>
				</div>
				<div class="col-md-6 d-flex justify-content-center align-items-center padding-five-lr wow animate__fadeInRight" data-wow-delay="0.4s">
					<div>
						<%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-320 text-uppercase w-90") %>
						<%= render "info_image_desc", snippet: snippet, btn_color: btn_color %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
