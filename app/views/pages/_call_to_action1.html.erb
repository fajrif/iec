<%- text_color, btn_color = get_iec_element_colors(bg_color) -%>
<%- link_buttons = snippet.link_buttons -%>
<%- margin_button = 'margin-10px-right' if link_buttons.size > 1 -%>
<div class="container-xl">
	<div class="row <%= text_color %>">
		<div class="col-md-8 last-paragraph-no-margin sm-margin-30px-bottom wow animate__fadeInLeft">
			<h3 class="font-weight-320 text-extra-dark-gray text-uppercase margin-10px-bottom w-70 sm-w-100"><%= snippet.title %></h3>
			<% unless snippet.short_description.blank? %>
				<%= raw snippet.short_description %>
			<% end %>
		</div>
		<div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center sm-no-margin-bottom wow animate__fadeInRight">
			<div>
				<% link_buttons.each_with_index do |link_button, index| %>
					<%= render_link_text_url(link_button, "btn btn-medium btn-rounded btn-border #{btn_color} #{margin_button if index == 0}") %>
				<% end %>
			</div>
		</div>
	</div>
</div>
